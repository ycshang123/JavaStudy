<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.*?>
<HBox alignment="CENTER_LEFT"
      spacing="50"
      stylesheets="@../css/style.css"
      xmlns="http://javafx.com/javafx"
      styleClass="bg">
    <padding>
        <Insets left="30.0" right="30.0"/>
    </padding>
    <!--    放在一个StackedFontIcon里图标会呈现堆叠的效果-->
    <StackedFontIcon iconSize="48">
        <FontIcon iconColor="#fbc02d" iconLiteral="mdi-airballoon"/>
        <FontIcon iconColor="#e0f7fa" iconLiteral="mdi-air-conditioner" StackedFontIcon.iconSize="0.5"/>
    </StackedFontIcon>
    <!--这个图标只能默认大小-->
    <FontIcon iconColor="#9e9d24" iconLiteral="mdi-account-box"/>
    <StackedFontIcon iconSize="48">
        <FontIcon iconColor="#36a4a4" iconLiteral="mdi-access-point"/>
    </StackedFontIcon>

    <StackedFontIcon iconSize="48">
        <FontIcon iconColor="#ed8d13" iconLiteral="mdi-alert"/>
    </StackedFontIcon>

    <StackedFontIcon iconSize="48">
        <FontIcon iconColor="#3eb25e" iconLiteral="mdi-android"/>
    </StackedFontIcon>

    <StackedFontIcon iconSize="48">
        <FontIcon iconColor="#ef5350" iconLiteral="mdi-apple-safari"/>
    </StackedFontIcon>

    <!--带字体图标的按钮-->
    <Button prefHeight="40" prefWidth="90" style="-fx-cursor: hand;" styleClass="btn"
            text="警告">
        <graphic>
            <StackedFontIcon iconSize="24">
                <FontIcon iconColor="#f6f6f6" iconLiteral="mdi-alert-circle"/>
            </StackedFontIcon>
        </graphic>
    </Button>


</HBox>
